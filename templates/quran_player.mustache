<div class="block_quranplayer" data-instanceid="{{instanceid}}">
    <label for="quranplayer-select-{{instanceid}}">{{title}}</label>
    <select id="quranplayer-select-{{instanceid}}" class="form-control">
        <option value="">{{#str}}selectfile, block_quranplayer{{/str}}</option>
        {{#surahs}}
        <option value="{{number}}">{{number}}. {{name}}</option>
        {{/surahs}}
    </select>
    
    <div id="quran-text-{{instanceid}}" class="quran-text mt-3">
        <h3>{{title}}</h3>
        <pre id="quran-content-{{instanceid}}" style="white-space: pre-wrap;">{{loading}}</pre>
    </div>
    
    <audio id="quranplayer-{{instanceid}}" controls class="w-100 mt-3">
        <source id="quranplayer-source-{{instanceid}}" src="" type="audio/mpeg">
        {{#str}}browsererror, block_quranplayer{{/str}}
    </audio>
    
    <div id="audio-error-{{instanceid}}" class="alert alert-danger mt-3" style="display: none;"></div>
</div>