<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="block/quranplayer/db" VERSION="20250408" COMMENT="XMLDB file for Moodle block/quranplayer"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="block_quranplayer" COMMENT="Stores the configuration for the Quran Player block">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="surah" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="1" COMMENT="Surah number"/>
        <FIELD NAME="ayah" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="1" COMMENT="Ayah number"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Time when the record was created"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Time when the record was modified"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB> 